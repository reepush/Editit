ol.breadcrumb
  li
    span(ng-if='!dirs.length')
      span.glyphicon.glyphicon-home
    a(ng-if='dirs.length' ng-click="dirClick({ path: '/' })")
      span.glyphicon.glyphicon-home

  li(ng-repeat='dir in dirs' ng-class='{ active: $last }')
    a(ng-if='!$last' ng-click='dirClick(dir)') {{ dir.name }}
    span(ng-if='$last') {{ dir.name }}

